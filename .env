# Open Agent Studio - Environment Variables
# Created: 2024 - Local Development Setup

# ========== REQUIRED ==========

# Anthropic API Key (REQUIRED - Add your key!)
ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE

# API Authentication Token (default is fine for local dev)
AUTH_TOKEN=dev-token

# ========== DEPLOYMENT CONTROL ==========

# Control Panel API (Deployment Management)
CONTROL_API_URL=http://localhost:5000
FLASK_APP=control_api.py
FLASK_ENV=development

# ========== MAIN API CONFIGURATION ==========

# Main Agent API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# ========== DOCKER & DATABASE ==========

# Database Configuration (for PostgreSQL)
DB_PASSWORD=openagent
POSTGRES_USER=openagent
POSTGRES_DB=workflows

# ========== BROWSER CONFIGURATION ==========

# Browser Settings
BROWSER_HEADLESS=true
BROWSER_TYPE=chromium

# ========== LOGGING & DEBUG ==========

# Logging Configuration
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# ========== OPTIONAL ==========

# Custom config file path
CONFIG_FILE=config_vps.json

# Python path (for MCP server)
PYTHON_PATH=/app
