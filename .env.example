# Open Agent Studio - Environment Variables
# Copy this file to .env and fill in your values

# ========== REQUIRED ==========

# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE

# API Authentication Token (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
AUTH_TOKEN=your-secret-token-here

# ========== DEPLOYMENT CONTROL ==========

# Control Panel API (Deployment Management)
CONTROL_API_URL=http://localhost:5000
FLASK_APP=control_api.py
FLASK_ENV=development

# ========== MAIN API CONFIGURATION ==========

# Main Agent API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# ========== DOCKER & DATABASE ==========

# Database Configuration (for PostgreSQL)
DB_PASSWORD=openagent
POSTGRES_USER=openagent
POSTGRES_DB=workflows

# ========== BROWSER CONFIGURATION ==========

# Browser Settings
BROWSER_HEADLESS=true
BROWSER_TYPE=chromium

# ========== LOGGING & DEBUG ==========

# Logging Configuration
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# ========== OPTIONAL ==========

# Custom config file path
CONFIG_FILE=config_vps.json

# Python path (for MCP server)
PYTHON_PATH=/app

# Supabase Configuration (if using Supabase MCP)
# SUPABASE_URL=your-project-url
# SUPABASE_KEY=your-anon-key
